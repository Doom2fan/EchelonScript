<UserControl x:Class="TestSuiteWPF.Tests.ExportAndGCTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TestSuiteWPF"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="452*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <Button Content="Test exports" Click="TestExports_Click"/>
            <Button Content="Test Consistency" Click="TestConsistency_Click"/>
            <Button Content="Test Consistency (Loop)" Click="TestConsistency2_Click"/>
            <Button Content="Spam allocations" Click="SpamAllocations_Click"/>
        </StackPanel>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" ResizeDirection="Columns"/>
        <TextBox x:Name="resultsTextBox" Grid.Column="2" HorizontalAlignment="Stretch" TextWrapping="Wrap" UndoLimit="0" IsReadOnly="True" FontFamily="Courier New"/>
    </Grid>
</UserControl>