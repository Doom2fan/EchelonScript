        xmlns:local="clr-namespace:TestSuiteWPF"
        xmlns:Tests="clr-namespace:TestSuiteWPF.Tests" x:Class="TestSuiteWPF.MainWindow"
        mc:Ignorable="d"
        Title="TestSuite" Width="816" Height="489">
