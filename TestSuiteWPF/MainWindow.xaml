            <Grid Background="#FFE5E5E5">
                <Tests:TokenizerTest />
            </Grid>
        </TabItem>
        <TabItem Header="Parser test">
            <Grid Background="#FFE5E5E5">
                <Tests:ParserTest />
            </Grid>
        </TabItem>
        <TabItem Header="Compiler test">
            <Grid Background="#FFE5E5E5">
                <Tests:CompilerTest />
            </Grid>
        </TabItem>
        <TabItem Header="GC Info">
            <Grid Background="#FFE5E5E5">
                <Tests:GCInfo />
            </Grid>
        </TabItem>
    </TabControl>
</Window>